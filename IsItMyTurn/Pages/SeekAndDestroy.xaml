<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:im="clr-namespace:IsItMyTurn.Models"
             mc:Ignorable="d"
             x:Class="IsItMyTurn.Pages.SeekAndDestroy">
    <AbsoluteLayout>
        <Image Source="background.jpg" Aspect="Fill"/>
        <StackLayout AbsoluteLayout.LayoutBounds="0.5, 0, 0.8, 0.98" AbsoluteLayout.LayoutFlags="All">
            <StackLayout VerticalOptions="EndAndExpand" HorizontalOptions="Fill">
                <Button 
                x:Name="AddNewBtn"
                Text="Lisää uusi"
                TextColor="White"
                BackgroundColor="Black"
                BorderColor="White"
                BorderWidth="3"
                CornerRadius="15"
                Opacity=".7"
                Clicked="AddNewBtn_Clicked"/>
                <Button
                x:Name="ToMainPageBtn"
                Text="Takaisin etusivulle"
                TextColor="White"
                BackgroundColor="Black"
                BorderColor="White"
                BorderWidth="3"
                CornerRadius="15"
                Opacity=".7"
                Clicked="ToMainPageBtn_Clicked"/>
            </StackLayout>
        </StackLayout>
        <Label 
            x:Name="AppNameLbl"
            Text="Is It My Turn"
            FontAttributes="Bold"
            TextColor="White"
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center"
            AbsoluteLayout.LayoutBounds="0.5, 0.01, 1, 0.1"
            AbsoluteLayout.LayoutFlags="All">
            <Label.FontSize>
                <OnPlatform x:TypeArguments="x:Double">
                    <On Platform="Android" Value="{im:NamedSize Title, TargetType=Label}" />
                    <On Platform="iOS" Value="{im:NamedSize Title, TargetType=Label}" />
                </OnPlatform>
            </Label.FontSize>
        </Label>
        <Label 
            Text="Kirjausten selaus/poisto"
            TextColor="White"
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center"
            AbsoluteLayout.LayoutBounds="0.5, 0.12, 1, 0.1"
            AbsoluteLayout.LayoutFlags="All">
            <Label.FontSize>
                <OnPlatform x:TypeArguments="x:Double">
                    <On Platform="Android" Value="{im:NamedSize Large, TargetType=Label}" />
                    <On Platform="iOS" Value="{im:NamedSize Large, TargetType=Label}" />
                </OnPlatform>
            </Label.FontSize>
        </Label>
        <StackLayout AbsoluteLayout.LayoutBounds="0.5, 0.51, 1, 0.55" AbsoluteLayout.LayoutFlags="All">
            <Label 
                Text="Tehdyt kirjaukset"
                TextColor="White"
                Margin="10,0,10,0"
                FontAttributes="Bold"
                HorizontalTextAlignment="Center">
                <Label.FontSize>
                    <OnPlatform x:TypeArguments="x:Double">
                        <On Platform="Android" Value="{im:NamedSize Medium, TargetType=Label}" />
                        <On Platform="iOS" Value="{im:NamedSize Body, TargetType=Label}" />
                    </OnPlatform>
                </Label.FontSize>
            </Label>
            <ListView BackgroundColor="Transparent" Margin="10,0,10,0" x:Name="listView" ItemTapped="listView_ItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell
                            x:Name="ShiftCell"
                            TextColor="White"
                            DetailColor="White"
                            Text="{Binding ApartmentName, StringFormat='Asunto: {0}'}" 
                            Detail="{Binding DateStr, StringFormat='Leikkuu ajankohta: {0}'}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <StackLayout Orientation="Horizontal" Margin="10,0,10,10">
                <Button 
                    x:Name="EditShiftBtn"
                    Text="Muokkaa"
                    TextColor="White"
                    BackgroundColor="Black"
                    BorderColor="White"
                    BorderWidth="3"
                    CornerRadius="15"
                    Opacity=".7"
                    HorizontalOptions="StartAndExpand"
                    IsEnabled="False"
                    Clicked="EditShiftBtn_Clicked">
                    <Button.WidthRequest>
                        <OnPlatform x:TypeArguments="x:Double">
                            <On Platform="Android" Value="{im:PercentOfWidth 0.2, TargetType=Button}"/>
                            <On Platform="iOS" Value="{im:PercentOfWidth 0.2, TargetType=Button}"/>
                        </OnPlatform>
                    </Button.WidthRequest>
                </Button>
                <Button
                    x:Name="DeleteShiftBtn"
                    Text="Poista"
                    TextColor="White"
                    BackgroundColor="Black"
                    BorderColor="White"
                    BorderWidth="3"
                    CornerRadius="15"
                    Opacity=".7"
                    HorizontalOptions="EndAndExpand"
                    IsEnabled="False"
                    Clicked="DeleteShiftBtn_Clicked">
                    <Button.WidthRequest>
                        <OnPlatform x:TypeArguments="x:Double">
                            <On Platform="Android" Value="{im:PercentOfWidth 0.2, TargetType=Button}"/>
                            <On Platform="iOS" Value="{im:PercentOfWidth 0.2, TargetType=Button}"/>
                        </OnPlatform>
                    </Button.WidthRequest>
                </Button>
            </StackLayout>
        </StackLayout>

    </AbsoluteLayout>
</ContentPage>